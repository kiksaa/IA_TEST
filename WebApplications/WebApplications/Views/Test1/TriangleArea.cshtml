@model WebApplications.Models.Test1

@{
    ViewBag.Title = "TriangleArea";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>หาพื้นที่สามเหลี่ยม</title>
    <!-- Custom fonts for this template -->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @using (Ajax.BeginForm("Calculate", "Test1", new AjaxOptions { UpdateTargetId = "CalculateDeatils" }))
    {
        <div class="container-fluid">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            </div>
            <br />
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">หาพื้นที่สามเหลี่ยม</h4>
            </div>
            <div class="card-body">
                <div class="container">
                    <br />
                    <form>
                        <div id="CalculateDeatils"></div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group row">
                                    <div class="col-md-8">
                                        @Html.LabelFor(model => model.base1)
                                        @Html.EditorFor(model => model.base1, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "ค่าฐาน" } })
                                        @Html.ValidationMessageFor(model => model.base1, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group row">
                                    <div class="col-md-8">
                                        @Html.LabelFor(model => model.height)
                                        @Html.EditorFor(model => model.height, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "ค่าสูง" } })
                                        @Html.ValidationMessageFor(model => model.height, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                    </form>
                    <div class="container">
                        <div class="row">
                            <div class="col-4">
                                <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "Test1")">
                                    <span>
                                        Go Back
                                    </span>
                                </a>
                            </div>
                            <div class="col">
                                <input type="submit" value="Calculate" class="btn btn-info" />
                            </div>
                            <div class="col">
                                <a type="button" class="btn btn-primary" href="@Url.Action("TestAPI", "Test1")">
                                    <span>
                                        Next
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
